@model IEnumerable<BidMVC.Models.Product>

@{
    ViewBag.Title = "ListViewAllProducts";
    Layout = "../Shared/_LayoutPageCustom.cshtml";
}

<h2>ListViewAllProducts</h2>


<table class="table table-bordered table-responsive table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Details)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastDate)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.Display(item.ProductName)
            </td>
            <td>
                @Html.Display(item.ProductCode)
            </td>
            <td>
                @Html.Display(item.Category)
            </td>
            <td>

                <img src="@Url.Content(item.Image1)" />
            </td>
            <td>
                <img src="@Url.Content(item.Image2)" />
            </td>
            <td>
                <img src="@Url.Content(item.Image3)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Details)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastDate)
            </td>

        </tr>
    }

</table>
